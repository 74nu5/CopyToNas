#!/bin/bash

# Fichier de configuration pour SftpCopyTool
# Copiez ce fichier vers /etc/sftp-copy/config.env et modifiez les valeurs
# Puis sourcez-le avant d'exécuter l'outil : source /etc/sftp-copy/config.env

# Configuration du serveur SFTP
export SFTP_HOST="votre-serveur-sftp.com"
export SFTP_PORT=22
export SFTP_USERNAME="votre-utilisateur"
export SFTP_PASSWORD="votre-mot-de-passe"

# Chemins de copie
export REMOTE_PATH="/chemin/distant/sur/serveur"
export LOCAL_PATH="/chemin/local/destination"

# Options
export RECURSIVE_MODE="--recursive"  # Laisser vide pour désactiver la copie récursive

echo "Configuration SFTP chargée :"
echo "  Serveur: $SFTP_HOST:$SFTP_PORT"
echo "  Utilisateur: $SFTP_USERNAME"
echo "  Chemin distant: $REMOTE_PATH"
echo "  Chemin local: $LOCAL_PATH"
echo "  Mode récursif: ${RECURSIVE_MODE:-désactivé}"
